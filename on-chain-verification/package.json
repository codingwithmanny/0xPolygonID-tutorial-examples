{
  "name": "on-chain-verification",
  "private": true,
  "version": "1.0.0",
  "description": "A monorepo to demonstrate on-chain verification",
  "main": "index.js",
  "author": "@codingwithmanny",
  "license": "MIT",
  "scripts": {
    "compile": "./node_modules/.bin/lerna run compile --scope=on-chain-verification-contract",
    "deploy": "./node_modules/.bin/lerna run deploy --scope=on-chain-verification-contract",
    "verify": "./node_modules/.bin/hardhat verify --config \"./packages/contract/hardhat.config.ts\" --network mumbai",
    "setZKPRequest": "./node_modules/.bin/lerna run setZKPRequest --scope=on-chain-verification-contract",
    "dev": "./node_modules/.bin/lerna run dev --scope=on-chain-verification-frontend"
  },
  "devDependencies": {
    "lerna": "^6.1.0"
  },
  "workspaces": [
    "packages/*"
  ]
}